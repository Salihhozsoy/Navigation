<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.author.AuthorFragment">

    <EditText
        android:id="@+id/etAuthorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAuthorSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etAuthorName" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/etAuthorSurname"
        app:layout_constraintRight_toRightOf="@+id/etAuthorSurname"
        app:layout_constraintTop_toBottomOf="@+id/etAuthorSurname"
        android:text="Yazar Ekle"/>
    <Button
        android:id="@+id/btnKitaplaraGecis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnSave"
        app:layout_constraintRight_toRightOf="@+id/btnSave"
        app:layout_constraintTop_toBottomOf="@+id/btnSave"
        android:text="Kitaplar SayfasÄ±na Gecis"/>

</androidx.constraintlayout.widget.ConstraintLayout>